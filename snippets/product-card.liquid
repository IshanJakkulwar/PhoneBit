<div class="product-card border rounded-lg p-4 hover:shadow-lg">
  <a href="{{ product.url }}">
    <div class="aspect-w-1 aspect-h-1 overflow-hidden">
      <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" class="object-cover w-full h-full">
    </div>
    <h3 class="mt-4 font-semibold text-base">{{ product.title }}</h3>
    <p class="text-sm text-gray-600">{{ product.price | money }}</p>
  </a>
</div>
